fpath=( __CURDIR__/functions ${fpath} )
fpath=( __CURDIR__/completions ${fpath} )

typeset -aU ffiles
ffiles=( __CURDIR__/functions/**/[^_]*[^(~|.zwc)](N.:t))
(( ${#ffiles} > 0 )) && autoload -U "${ffiles[@]}"
unset -v ffiles

typeset -U fpath FPATH

if alias run-help &>/dev/null; then
	unalias run-help
fi
autoload -U run-help
