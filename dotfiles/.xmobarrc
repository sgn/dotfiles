Config { font = "xft:Monospace:bold:size=10, -misc-fixed-*-*-*-*-10-*-*-*-*-*-*-*"
       , fgColor = "white"
       , bgColor = "gray20"
       , position = Bottom
       , commands = [ Run Date "%a %d %b %Y %H:%M:%S" "date" 10
                    , Run Cpu [ "-t","CPU <total>%"
                              , "-H","50", "-h","red"] 10
                    , Run Memory [ "-t","M <usedratio>%"
                                 , "-H","70", "-h","red"] 10
                    , Run Swap [ "-t","/<usedratio>%"
                               , "-H","40", "-h","red"] 10
                    , Run DynNetwork [ "-t","<dev> <rx> <tx>"
                                      , "-H","8388608", "-h", "red"
                                      , "-S", "true"] 10
                    , Run Weather "VVTS" ["-t","<station>: <tempC>°C"] 36000
                    -- , Run Volume
                    , Run StdinReader
                    ]
       , template = " %StdinReader% }{ %dynnetwork% │ %cpu% │ %memory%%swap% │ %VVTS% │ %date% "
       }
