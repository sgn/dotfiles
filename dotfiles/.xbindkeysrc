# -*- shell-script -*-

# alsa
"amixer set Master 2%- && pkill -RTMIN+1 i3blocks"
	XF86AudioLowerVolume
"amixer set Master 2%+ && pkill -RTMIN+1 i3blocks"
	XF86AudioRaiseVolume
"amixer set Master toggle && pkill -RTMIN+1 i3blocks"
	XF86AudioMute
"amixer set Capture toggle"
	XF86AudioMicMute

# playerctl
"playerctl play-pause"
	XF86AudioPlay
"playerctl next"
	XF86AudioNext
"playerctl previous"
	XF86AudioPrev
"playerctl play-pause"
	Mod4 + F1
"playerctl next"
	Mod4 + F2
"playerctl previous"
	Mod4 + F3

## Screen Brightness
# https://wiki.archlinux.org/index.php/Xbindkeys#Backlight_control
"xbacklight -inc 20"
	XF86MonBrightnessUp
"xbacklight -dec 20"
	XF86MonBrightnessDown

"scrot 'Screenshot.%Y.%m.%d_%H.%M.%S.png' -e 'mv $f ~/Pictures'"
	Print
"xrandr.sh"
	XF86Display
"firefox -P default"
	Mod4 + w
"firefox -P script --no-remote"
	Mod4+Shift + w
"xset s activate"
	Mod4+Escape
"emacsclient -nc -a ''"
	Mod4+Shift + s
"xrandr.sh"
	XF86Display
