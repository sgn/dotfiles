# -*- shell-script -*-
"amixer set Master 2%-"
	XF86AudioLowerVolume
"amixer set Master 2%+"
	XF86AudioRaiseVolume
"amixer set Master toggle"
	XF86AudioMute
"amixer set Capture toggle"
	XF86AudioMicMute
"playerctl play-pause"
	XF86AudioPlay
"playerctl next"
	XF86AudioNext
"playerctl previous"
	XF86AudioPrev
"playerctl play-pause"
	Mod4 + F1
"playerctl next"
	Mod4 + F2
"playerctl previous"
	Mod4 + F3

## Screen Brightness
# https://wiki.archlinux.org/index.php/Xbindkeys#Backlight_control
"xbacklight -inc 20"
	XF86MonBrightnessUp
"xbacklight -dec 20"
	XF86MonBrightnessDown

"scrot 'Screenshot.%Y.%m.%d_%H.%M.%S.png' -e 'mv $f ~/Pictures'"
	Print
"firefox -P default"
	Mod4 + f
"firefox -P script --no-remote"
	Mod4+Shift + f
"xset s activate"
	Mod4+Control + l
"emacsclient -nc -a ''"
	Mod4+Shift + s
