#!/bin/sh

: "${BINPKGS:=${HOME}/src/void-packages/hostdir/binpkgs}"
: "${PRIVKEY:=${HOME}/src/private.pem}"

force=
debug=
while test $# -ne 0; do
	case "$1" in
		-f|--force) force=yes ;;
		-d|--debug) debug=yes ;;
	esac
	shift
done

find "$BINPKGS" -maxdepth 1 -name '*.xbps' -exec \
	xbps-rindex \
		${force:+--force} \
		${debug:+--debug} \
		--privkey "$PRIVKEY" \
		--sign-pkg '{}' +
